generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum SocialMediaPlatform {
  instagram
  tiktok
  facebook
}

enum EventCategory {
  concert
  live_music
  theater 
} 
model customer {
  id            String     @id @default(uuid()) @db.Char(36)
  username      String     @db.Char(36)
  email         String     @unique @db.VarChar(255)
  password      String     @db.VarChar(500)
  fullname      String     @db.Char(75)
  phone_number  String     @db.Char(16)
  referral_code String?    @db.Char(6)
  birth_date    DateTime   @db.Date
  created_at    DateTime   @default(now()) @db.Timestamptz(6)
  updated_at    DateTime?  @updatedAt @db.Timestamptz(6)
  points        Int        @default(0) @db.Integer()

  // Relations 
  owner_referral_code_histories referral_code_history[] @relation("OwnerReferralHistory")
  user_referral_code_histories  referral_code_history[] @relation("UserReferralHistory")
  transactions                  transaction[]
}

model transaction {
  id              String    @id @default(uuid()) @db.Char(36)
  customer_id     String    @db.Char(36)
  event_id        String    @db.Char(36)
  payment_method  String    @db.Char(16)
  amount          Int       @default(0) @db.Integer()
  created_at      DateTime  @default(now()) @db.Timestamptz(6)
  paid_off_at     DateTime? @updatedAt @db.Timestamptz(6) 
  
  // FK 
  customer customer @relation(fields: [customer_id], references: [id])
}

model referral_code_history {
  id                String     @id @default(uuid()) @db.Char(36)
  customer_owner_id String     @db.Char(36)
  customer_user_id  String     @unique @db.Char(36)
  created_at        DateTime   @default(now()) @db.Timestamptz(6)

  // FK
  customer_owner customer @relation("OwnerReferralHistory", fields: [customer_owner_id], references: [id])
  customer_user  customer @relation("UserReferralHistory", fields: [customer_user_id], references: [id])
}

model event_organizer {
  id             String     @id @default(uuid()) @db.Char(36)
  username       String     @db.Char(36)
  email          String     @unique @db.VarChar(255)
  password       String     @db.VarChar(500)
  organizer_name String     @db.Char(125)
  phone_number   String     @db.Char(16)
  address        String?    @db.VarChar(255)
  bio            String     @db.VarChar(500)
  created_at     DateTime   @default(now()) @db.Timestamptz(6)
  updated_at     DateTime?  @updatedAt @db.Timestamptz(6)

  // Relations 
  social_medias social_media[]
  discounts     discount[]
  events        event[]
}

model event {
  id String @id @default(uuid()) @db.Char(36)
  event_organizer_id    String @db.Char(36) 
  event_title           String @db.VarChar(144)
  event_desc            String @db.VarChar(500)
  event_category        EventCategory
  event_price           Int @default(0) @db.Integer()
  is_paid               Boolean @db.Boolean
  maximum_seat          Int @default(0) @db.Integer()
  created_at            DateTime @default(now()) @db.Timestamptz(6)
  updated_at            DateTime? @updatedAt @db.Timestamptz(6)
  deleted_at            DateTime? @updatedAt @db.Timestamptz(6)

  // Relations
  event_schedule event_schedule[]
  
  // FK 
  event_organizer event_organizer @relation(fields: [event_organizer_id], references: [id])
}

model event_schedule {
  id String @id @default(uuid()) @db.Char(36)
  venue_id String @db.Char(36)
  event_id String @db.Char(36)
  description String? @db.VarChar(144)
  start_date DateTime @db.Timestamptz(6)
  end_date DateTime @db.Timestamptz(6)

  // FK 
  event event @relation(fields: [event_id], references: [id])
  venue venue @relation(fields: [venue_id], references: [id])
}

model social_media {
  id                    String  @id @default(uuid()) @db.Char(36)
  event_organizer_id    String  @db.Char(36)
  social_media_platform SocialMediaPlatform
  social_media_url      String  @db.VarChar(500)

  // FK
  event_organizer event_organizer @relation(fields: [event_organizer_id], references: [id])
}

model venue {
  id                String    @id @default(uuid()) @db.Char(36)
  venue_name        String    @unique @db.Char(74)
  venue_description String    @db.VarChar(255)
  venue_address     String    @db.VarChar(500)
  venue_coordinate  String    @db.Char(144)
  created_at        DateTime  @default(now()) @db.Timestamptz(6)

  // Relations
  event_schedules event_schedule[]
}

model discount {
  id                  String    @id @default(uuid()) @db.Char(36)
  event_organizer_id  String?   @db.Char(36)
  percentage          Int       @db.Integer()
  description         String    @db.VarChar(144)
  created_at          DateTime  @default(now()) @db.Timestamptz(6)

  // FK
  event_organizer  event_organizer?  @relation(fields: [event_organizer_id], references: [id])
}